<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.learn.LearnFragment">

    <TextView
        android:gravity="center"
        android:id="@+id/textMessages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="@string/hello_blank_fragment"
        app:layout_constraintBottom_toTopOf="@id/tictacktoeview"
        app:layout_constraintTop_toTopOf="parent" />

    <com.ctrlya.tictactoe.canvas.TicTacToeView
        android:id="@+id/tictacktoeview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textMessages" />

</androidx.constraintlayout.widget.ConstraintLayout>